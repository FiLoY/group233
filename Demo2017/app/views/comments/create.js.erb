var form = $('#new_comment');
function remove_error() {
  form.find('.errors').remove();
}

<% if @comment.persisted? %>
$('#comments').append('<%= j render @comment %>');
comments_to_bottom();
form.get(0).reset();
remove_error();
<% else %>
remove_error();
form.prepend(
    '<%= j render 'shared/errors', object: @comment %>'
);
<% end %>