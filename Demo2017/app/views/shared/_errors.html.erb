<% if object.errors.any? %>
    <div class="alert alert-danger errors">
      <strong>
        Found
        <%= pluralize object.errors.count, 'error' %>:
      </strong>
      <ul>
        <% object.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
      </ul>
    </div>
<% end %>